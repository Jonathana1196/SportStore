<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card text-center">
            <div class="card border-primary mb-3 h2">
                <div class="card-header font-italic text-danger"
                    style="font-family: 'Times New Roman', Times, serif; font-weight: bold;">
                    -SportStore-
                </div>
                <div class="card-header font-italic text-info"
                    style="font-family: 'Times New Roman', Times, serif; font-weight: bold;">
                    Registre los deportes
                </div>
            </div>
            <div class="card-body">
                <form action="/Products/UsoDeportes" method="POST">
                    <div class="form-group">
                        <div class="form-group">
                            <i class="fas fa-running"></i>
                            <i class="fas fa-baseball-ball"></i>
                            <i class="fas fa-futbol"></i>
                            <i class="fas fa-football-ball"></i>
                            <i class="fas fa-basketball-ball"></i>

                            <select class="form-select" aria-label="Default select example" name="Deportes"
                                value="{{Deportes}}"
                                style="font-family: 'Times New Roman', Times, serif; font-weight: bold;">
                                <option value="">Elija Deporte</option>
                                <option value="Atletismo">Atletismo</option>
                                <option value="Baloncesto">Baloncesto</option>
                                <option value="Surf">Surf</option>
                                <option value="Baseball">Baseball</option>
                                <option value="Boxeo">Boxeo</option>
                                <option value="Tennis">Tennis</option>
                                <option value="Fútbol">Fútbol</option>
                                <option value="Fútbol Americano">Fútbol Americano</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block bg-info"
                                style="font-family: 'Times New Roman', Times, serif; font-weight: bold;">
                                Añadir deporte
                            </button>
                        </div>
                </form>
                <form action="/Products/TerminaProducto" method="POST">
                    <button type="submit" class="btn btn-primary btn-block bg-info"
                        style="font-family: 'Times New Roman', Times, serif; font-weight: bold;">
                        Añadir Producto
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>