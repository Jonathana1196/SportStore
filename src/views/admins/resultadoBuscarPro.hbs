<div class="jumbotron-mt-4">
  <h1 class="display-1 text-center"
    style="color:crimson; font-family: 'Times New Roman', Times, serif; font-weight: bold;">
    ~SportStore~
  </h1>
  <h1 style="font-family: 'Times New Roman', Times, serif; font-weight: bold; text-align: center;">
    Resultado
  </h1>
  <div class="row" style="font-family: 'Times New Roman', Times, serif;">
    <br />
    <br />
    {{#with buscPro}}
    <div class="col-sm-3">
      <div class="purchase">
        <div class="body align-content-center">
          <h5 class="productos"
            style="font-family: 'Times New Roman', Times, serif; font-weight: bold; text-align: center;">
            <i class="fas fa-shopping-bag"></i>
            Producto:
            {{NombreArticulo}}
          </h5>
          <div class="card-body" style="border-radius: 6mm; background-color:#cfd8dc;">
            <p>
              <i class="fas fa-copyright">
                Marca
                {{Marca}}
              </i>
            </p>
            <p>
              <i class="fas fa-dollar-sign">
                Precio: ₡
                {{Precio}}
              </i>
            </p>
            <p>
              {{#each Deportes}}
              <i class="fas fa-running">
                Deportes:
                {{Deportes}}
              </i>
              <br />
              {{/each}}
            </p>
            <p style="font-weight: bold;">
              <i class="fab fa-old-republic">
                ¿Es edición limitada?
                {{Edicion}}
              </i>
            </p>
            <p>
              <i class="fas fa-list-ol">
                Inventario:
                {{Inventario}}
              </i>
            </p>
          </div>
          <br />
          <br />
        </div>
      </div>
    </div>
    {{/with}}
  </div>
  <br />
  <br />
  <br />
</div>
<br />