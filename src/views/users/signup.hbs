<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                Registre su cuenta aquí
            </div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Ingrese su nombre" value="{{name}}">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="lastName" placeholder="Ingrese su apellido" value="{{lastName}}">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="birth" placeholder="Ingrese su fecha de nacimiento" value="{{birth}}">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="sex" placeholder="Ingrese su sexo" value="{{sex}}">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="user" placeholder="Ingrese su nombre de usuario" value="{{user}}">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="password" placeholder="Ingrese su contraseña" value="{{password}}">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">
                            Registrarme
                        </button>
                    </div>
                </form>
            </div>

        </div>

    </div>
</div>