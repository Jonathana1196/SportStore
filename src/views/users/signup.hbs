<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card text-center">
            <div class="card border-primary mb-3 h2">
            <div class="card-header font-italic text-danger"> 
                -SportStore-
            </div>
            <div class="card-header font-italic text-info">
                Registre su cuenta aquí
            </div>
            </div>
                <div class="card-body">
                    <form action="/users/signup" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="name" placeholder="Ingrese su nombre" value="{{name}}"></div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="lastName" placeholder="Ingrese su apellido" value="{{lastName}}"></div>
                                <div class="form-group">
                                    <input type="text" class="form-control" name="birth" placeholder="Ingrese su fecha de nacimiento (YYYY-MM-DD)" value="{{birth}}"></div>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" value="{{sex}}">
                                        Sexo
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="#">Hombre</a>
                                        <a class="dropdown-item" href="#">Mujer</a>
                                        <a class="dropdown-item" href="#">Otro</a>
                                    </div>
                                </div>
                                        <div class="form-group">
                                            <input type="text" class="form-control" name="user" placeholder="Ingrese su nombre de usuario" value="{{user}}"></div>
                                            <div class="form-group">
                                                <input type="text" class="form-control" name="password" placeholder="Ingrese su contraseña" value="{{password}}"></div>
                                                <div class="form-group">
                                                    <button type="submit" class="btn btn-primary btn-block bg-info">
                                                        Registrarme
                                                    </button>
                                                </div>
                                            </form>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> 
</div>           